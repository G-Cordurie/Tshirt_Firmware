// For format details, see https://aka.ms/devcontainer.json. For config options, see the README at:
// https://github.com/microsoft/vscode-dev-containers/tree/v0.224.3/containers/docker-existing-dockerfile
{
	"name": "Existing Dockerfile",

	"build": {
		"context": "..",
		"dockerfile": "Dockerfile",
		"args": {
			"PWD": "${localEnv:PWD}"
		},
	},

	"containerEnv": {
		"DISPLAY": "${localEnv:DISPLAY}",
		"GNU_INSTALL_ROOT": "${localEnv:GNU_INSTALL_ROOT}",
		"GNU_VERSION": "${localEnv:GNU_VERSION}",
		"GNU_PREFIX": "${localEnv:GNU_PREFIX}",
		"SDK_ROOT": "${containerWorkspaceFolder}/sdk/nRF5_SDK_17.1.0_ddde560",
		"BUILD_PROJECT": "kSenseQi",
		"DEBUG": "1",
	},

	"initializeCommand": [
		"xhost",
		"+"
	],

	"runArgs": [
		"--privileged",
		"--volume=/tmp/.X11-unix:/tmp/.X11-unix",
		"--volume=/etc/localtime:/etc/localtime:ro",
		"--volume=/dev/bus/usb/:/dev/bus/usb"
	],

	"postAttachCommand": "/usr/local/segger_embedded_studio/bin/emStudio -D SDK_ROOT=$SDK_ROOT ${containerWorkspaceFolder}/app/$BUILD_PROJECT/s132/ses/$BUILD_PROJECT.emProject",
	// Set *default* container specific settings.json values on container create.
	"settings": {},
	
	// Add the IDs of extensions you want installed when the container is created.
	"extensions": [
		"dracula-theme.theme-dracula",
		"vscode-icons-team.vscode-icons",
		"ms-vscode.cpptools-extension-pack",
		"eamodio.gitlens",
		"yzhang.markdown-all-in-one",
		"VisualStudioExptTeam.vscodeintellicode",
		"zxh404.vscode-proto3",
		"cschlosser.doxdocgen",
		"Gruntfuggly.todo-tree",
		"mhutchie.git-graph",
	]

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Uncomment the next line to run commands after the container is created - for example installing curl.
	// "postCreateCommand": "apt-get update && apt-get install -y curl",

	// Uncomment to use the Docker CLI from inside the container. See https://aka.ms/vscode-remote/samples/docker-from-docker.
	// "mounts": [ "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind" ],

	// Uncomment to connect as a non-root user if you've added one. See https://aka.ms/vscode-remote/containers/non-root.
	// "remoteUser": "vscode"
}
